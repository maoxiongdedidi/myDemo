<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.doohan.mybluetoothle">

    <uses-feature
        android:name="android.hardware.bluetooth_le"
        android:required="true"/>

    <uses-permission android:name="android.permission.BLUETOOTH"/>
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
        </activity>
        <activity
            android:name="le.DeviceScanActivity"
            android:label="@string/app_name">

        </activity>
        <activity android:name="le.DeviceControlActivity"/>

        <service
            android:name="le.BluetoothLeService"
            android:enabled="true"/>

        <activity android:name=".BleListActivity"
                  android:label="@string/app_scan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".UpgradeActivity"/>
        <activity android:name=".FileGuanLi.MyFileActivity"/>
        <activity android:name=".UpgradeTwoActivity"/>
    </application>

</manifest>